<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Margin="80"
    >
<Grid>
  <Grid.Triggers>
    <EventTrigger RoutedEvent="Grid.Loaded">
      <BeginStoryboard>
        <Storyboard TargetName="media">
          <MediaTimeline Source="Gitarrensound.wav" RepeatBehavior="Forever"/>
        </Storyboard>
      </BeginStoryboard>
    </EventTrigger>
  </Grid.Triggers>
  <MediaElement x:Name="media"/>
  <TextBlock Text="Wiskey in the Jar-Riff bis die Nachbarn klingeln"/>
</Grid>


</Page>
