<Window x:Class="FarbReglerStefanSchoof.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Farbregler2000" Height="350" Width="525">
    <Grid>
        <Slider x:Name="r" Value="0" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"  Width="100" Minimum ="0" Maximum="255" ValueChanged="slider_ValueChanged">

        </Slider>
        <Slider x:Name="g" Value="0" HorizontalAlignment="Left" Margin="154,50,0,0" VerticalAlignment="Top"  Width="100" Minimum ="0" Maximum="255" ValueChanged="slider_ValueChanged">

        </Slider>



        <Slider x:Name="b" Value="0" HorizontalAlignment="Left" Margin="313,50,0,0" VerticalAlignment="Top" Width="100" Minimum ="0" Maximum="255" ValueChanged="slider_ValueChanged"/>
        <Label x:Name="labelR" Content="r" HorizontalAlignment="Left" Margin="28,91,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelG" Content="g" HorizontalAlignment="Left" Margin="191,91,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelB" Content="b" HorizontalAlignment="Left" Margin="347,91,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
