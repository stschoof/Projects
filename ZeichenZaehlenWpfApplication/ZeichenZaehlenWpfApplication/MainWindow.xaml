<Window x:Class="ZeichenZaehlenWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeichenZaehlenWpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid RenderTransformOrigin="0.5,0.568">
        <TextBox 
            Name="eingabe" Height="200" Width="200" 
            HorizontalAlignment="Left" VerticalAlignment="Center" 
            BorderThickness="5,5,5,5"
            BorderBrush="DarkBlue"
            ></TextBox>
        <Label
            Name="labelZeichen" 
            Height="200" Width="200" 
            HorizontalAlignment="Center" VerticalAlignment="Center" 
            BorderThickness="5,5,5,5" BorderBrush="Orange"
            FontSize="16"
         ></Label>

        <Label 
            Name="labelWorte" 
            Height="200" Width="200" 
            HorizontalAlignment="Right" VerticalAlignment="Center" 
            BorderThickness="5,5,5,5" BorderBrush="Orange"
            FontSize="16"
        ></Label>
        
    </Grid>
</Window>
