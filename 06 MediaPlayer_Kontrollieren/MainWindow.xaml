<Window x:Class="MediaPlayer_Kontrollieren.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MediaClock und MediaTimeline" SizeToContent="Height" Width="300" Loaded="Window_Loaded">

	<StackPanel>
	 <TextBox IsReadOnly="True" x:Name="txtTime" Margin="5 5 5 0"/>
	 <ProgressBar x:Name="progressBar" Height="10" Margin="5"/>
	<Button Content="Play" Click="PlayButton_Click" Width="75" Margin="5"/>
	</StackPanel>
</Window>
